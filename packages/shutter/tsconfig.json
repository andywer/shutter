{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2017.object"],
    "strict": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*",
        "../../node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
